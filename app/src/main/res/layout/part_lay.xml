<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/head"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/body"
        android:layout_below="@+id/head"
        android:layout_alignLeft="@+id/head"
        android:layout_alignStart="@+id/head"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/timing"
        android:layout_below="@+id/body"
        android:layout_alignLeft="@+id/body"
        android:layout_alignStart="@+id/body"
        android:textColor="#000000"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/fee"
        android:layout_below="@+id/timing"
        android:layout_alignLeft="@+id/timing"
        android:layout_alignStart="@+id/timing"
        android:layout_marginTop="15dp"
        android:textColor="#000000" />
</RelativeLayout>